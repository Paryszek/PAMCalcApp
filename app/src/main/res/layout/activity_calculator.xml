<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.parys.calc.Calculator">

<android.support.v7.widget.GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="6">

    <TextView
        android:id="@+id/equasion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="30sp"
        app:layout_columnSpan="4"
        app:layout_row="0" />

    <Button
        android:id="@+id/bksp"
        android:text="bksp"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/c"
        android:text="C"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/round"
        android:text="+/-"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/seven"
        android:text="7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/eight"
        android:text="8"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/nine"
        android:text="9"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/divide"
        android:text="/"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/four"
        android:text="4"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/five"
        android:text="5"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/six"
        android:text="6"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/multi"
        android:text="*"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/one"
        android:text="1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/two"
        android:text="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/three"
        android:text="3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/minus"
        android:text="-"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/zero"
        android:text="0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/dot"
        android:text="."
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/equal"
        android:text="="
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="0" />

    <Button
        android:id="@+id/plus"
        android:text="+"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="0" />

</android.support.v7.widget.GridLayout>

</LinearLayout>
