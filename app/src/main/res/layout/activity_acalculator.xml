<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parys.calc.ACalculator">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="8">

        <TextView
            android:id="@+id/equasion"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text=""
            android:textSize="15sp"
            app:layout_columnSpan="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/bksp"
            android:layout_height="40sp"
            android:text="bksp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/c"
            android:layout_height="40sp"
            android:text="C"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/round"
            android:layout_height="40sp"
            android:text="+/-"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="0" />
        <Button
            android:id="@+id/sin"
            android:layout_height="40sp"
            android:text="sin"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/cos"
            android:layout_height="40sp"
            android:text="cos"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/tan"
            android:layout_height="40sp"
            android:text="tan"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/ln"
            android:layout_height="40sp"
            android:text="ln"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="0" />
        <Button
            android:id="@+id/sqrt"
            android:layout_height="40sp"
            android:text="sqrt"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/x2"
            android:layout_height="40sp"
            android:text="x^2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/xy"
            android:layout_height="40sp"
            android:text="x^y"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/log"
            android:layout_height="40sp"
            android:text="log"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="0" />
        <Button
            android:id="@+id/seven"
            android:text="7"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/eight"
            android:text="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/nine"
            android:text="9"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/divide"
            android:text="/"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/four"
            android:text="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/five"
            android:text="5"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/six"
            android:text="6"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/multi"
            android:text="*"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/one"
            android:text="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/two"
            android:text="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/three"
            android:text="3"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/minus"
            android:text="-"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/zero"
            android:text="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/dot"
            android:text="."
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/equal"
            android:text="="
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="0" />

        <Button
            android:id="@+id/plus"
            android:text="+"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="0" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>
